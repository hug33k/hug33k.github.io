{
	"rules": {
		"block-no-empty": null,
		"color-no-invalid-hex": true,
		"comment-empty-line-before": [
			"always",
			{
				"ignore": ["stylelint-command", "after-comment"]
			}
		],
		"declaration-colon-space-after": "always",
		"indentation": [
			"tab"
		],
		"max-empty-lines": 1,
		"rule-empty-line-before": [
			"always",
			{
				"except": ["first-nested"],
				"ignore": ["after-comment"]
			}
		],
		"unit-whitelist": ["em", "px", "%", "s", "vw", "vh"]
	}
}